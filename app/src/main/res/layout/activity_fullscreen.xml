<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.AppRelogio.FullscreenContainer"
    tools:context=".FullscreenActivity">

    <TextView
        android:id="@+id/textNivelBateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nivel bateria %"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/iv_preferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_preferences"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:clickable="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textHorasMinutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="125sp"/>

        <TextView
            android:id="@+id/textSegundos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="40sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/azulOpcao"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:id="@+id/cbNivelBateria"
            android:text="NÃ­vel da bateria "/>

        <ImageView
            android:id="@+id/iv_sair"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>

    </LinearLayout>


</RelativeLayout>